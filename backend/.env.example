# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/grape
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grape
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AWS S3 / Cloudflare R2 Configuration
S3_BUCKET=grape-videos
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
# For Cloudflare R2, use: https://<account-id>.r2.cloudflarestorage.com

# Video Processing
MAX_VIDEO_DURATION=6
MAX_VIDEO_SIZE_MB=50
TARGET_VIDEO_SIZE_KB=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
